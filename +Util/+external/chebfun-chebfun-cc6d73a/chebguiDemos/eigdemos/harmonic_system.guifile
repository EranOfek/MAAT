'Harmonic oscillator as 1st-order system'
'system'
domain = '[0 pi]';
DE = {'u'' =  lambda*v';'v'' = -lambda*u'};
BC = {'u(0)  = 0'; 'u(pi) = 0'};
type = 'eig';
